
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  firstName String @map("first_name")
  lastName  String @map("last_name")
  workExperience String @map("work_experience")
  avatar    String?
  files     Files[]
  city      String?
  country   String?
  password  String
  phone     String @unique @map("phone_number")
  verifyEmail Boolean @default(false) @map("verify_email")
  verifyPhone Boolean @default(false) @map("verify_phone")
  refreshToken String
  salt      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      String @default("job_seeker")
}
model Files {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String @db.ObjectId
  user      User @relation(fields: [userId], references: [id])
}

